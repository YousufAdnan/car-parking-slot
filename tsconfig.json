{
    "compilerOptions": {
        /* Basic Options */
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015",
            "es2017",
            "es2019",
            "es6"
        ],
        "allowJs": true,
        "jsx": "react",
        "noEmit": true,
        "isolatedModules": true,

        "removeComments": true,
        "resolveJsonModule": true,
        "pretty": true,
        "skipLibCheck": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@this/*": [
                "@this/*"
            ]
        },

        "typeRoots": [
            "@this",
            "src",
            "types"
        ],
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        "incremental": true,
        "checkJs": true,
        "declaration": true,
        "outDir": "lib",
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true
    },
    "include": [
        "./src/",
        ".eslintrc.js",
        "**/gatsby/**/*",
        "**/src/**/*",
        "**/__mocks__/**/*",
        "**/test/**/*",
        "**/index.ts",
        "**/custom.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/.cache/*",
        "**/public",
        "**/cypress"
    ]
}